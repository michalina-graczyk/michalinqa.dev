---
import heroImage from "@assets/images/hero.png";
import { Image } from "astro:assets";
import Button from "@components/ui/Button.astro";
---

<section
  data-testid="hero"
  class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
  <div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
    <div>
      <h1
        class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl"
      >
        Cześć! Jestem <span class="text-orange">Michalina</span>, osiągnij swój
        sukces w IT ze mną!
      </h1>
    </div>
    <div class="mb-10">
      <Button
        style={"secondary"}
        size={"lg"}
        class={"flex"}
        name="learn more"
        href="#about"
        onclick="window.mixpanel.track('Learn more button clicked')"
      >
        Dowiedz się więcej
      </Button>
    </div>
  </div>
  <div
    data-testid="hero-img"
    class="mb-10 flex w-1/2 items-center justify-center"
  >
    <Image
      src={heroImage}
      alt="Coding girl"
      widths={[320, 480, 600, 800]}
      sizes="(min-width: 1024px) 600px, (min-width: 768px) 50vw, calc(100vw - 40px)"
      loading="eager"
    />
  </div>
</section>
