---
export interface Props {
  tags?: string[];
}

const { tags } = Astro.props;
---

{
  tags && (
    <div class="mt-2 flex flex-row flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="inline-block rounded py-2 text-xs text-black dark:text-white lg:py-1">
          #{tag}
        </span>
      ))}
    </div>
  )
}
