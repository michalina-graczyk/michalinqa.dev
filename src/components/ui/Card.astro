---
import consultationImage from "@assets/images/consultation.png";
import interviewImage from "@assets/images/interview.png";
import growthPlanImage from "@assets/images/growth-plan.png";

import { Image } from "astro:assets";
import Tags from "@components/ui/Tags.astro";

interface Props {
  url?: string;
  alt?: string;
  title?: string;
  description: string;
  tags: string[];
}

interface ImageMap {
  [key: string]: ImageMetadata;
}

const imageMap: ImageMap = {
  "Konsultacje online 1:1": consultationImage,
  "Rozmowa rekrutacyjna": interviewImage,
  "Ścieżki kariery": growthPlanImage,
};

const {
  url = "#",
  alt = "Project",
  description = "Project Description",
  title = "Project title",
  tags = ["Tags"],
} = Astro.props;

const image = imageMap[title];
---

<section class="w-full p-4 lg:w-1/3 flex flex-col">
  <article
    data-testid="card"
    class="flex flex-1 flex-col rounded-xl bg-white dark:bg-gray-800 p-3 shadow-lg dark:shadow-orange/20 transition-all duration-200 ease-in-out hover:scale-105 hover:shadow-xl hover:shadow-orange/10 dark:hover:shadow-orange/30 motion-reduce:transition-none motion-reduce:hover:scale-100"
  >
    <a href={url} aria-label={title ? `Zobacz ofertę: ${title}` : "Zobacz szczegóły oferty"} class="flex h-full flex-col">
      <div
        class="relative flex items-end justify-center overflow-hidden rounded-xl"
      >
        <Image
          src={image}
          alt={alt}
          layout="constrained"
          width={400}
          loading="lazy"
        />
      </div>
      <div class="mt-1 flex flex-grow flex-col p-2">
        <h3 class="text-xl text-orange lg:text-2xl">{title}</h3>
        <p class="flex-grow text-black dark:text-white text-s">{description}</p>
        <Tags tags={tags} />
      </div>
    </a>
  </article>
</section>
