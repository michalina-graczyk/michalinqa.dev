---
import BackToTop from "@components/ui/BackToTop.astro";
import Layout from "@layouts/Layout.astro";
import SectionTitle from "@components/ui/SectionTitle.astro";
import { Icon } from "astro-icon/components";
import { getPublishedPosts } from "@lib/blog";

const posts = await getPublishedPosts();

const sortedPosts = posts.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout
  title="Blog | Michalina Graczyk"
  description="Artykuły o testowaniu, jakości oprogramowania i karierze w IT."
  type="website"
>
  <main id="main-content" class="mb-20">
    <div class="mx-auto max-w-3xl px-4 py-8">
      <SectionTitle>Blog</SectionTitle>

      {
        sortedPosts.length === 0 ? (
          <div class="mt-12 text-center">
            <div class="mb-4 inline-flex h-16 w-16 items-center justify-center rounded-full bg-orange/10">
              <Icon name="mdi:pencil-outline" class="h-8 w-8 text-orange" />
            </div>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              Wkrótce pojawią się nowe artykuły. Zapraszam wkrótce!
            </p>
          </div>
        ) : (
          <div class="mt-10 space-y-6">
            {sortedPosts.map((post) => {
              const formattedDate = post.data.date.toLocaleDateString("pl-PL", {
                year: "numeric",
                month: "short",
                day: "numeric",
              });

              return (
                <article class="group">
                  <a
                    href={`/blog/${post.slug}`}
                    class="block overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm transition-all duration-300 hover:border-orange hover:shadow-lg hover:shadow-orange/10 dark:border-gray-700 dark:bg-gray-900 dark:hover:border-orange dark:hover:shadow-orange/20"
                  >
                    <div class="flex">
                      <div class="w-1.5 bg-orange opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
                      <div class="flex-1 p-6">
                        <div class="mb-3 flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
                          <div class="flex items-center gap-1.5">
                            <Icon
                              name="mdi:calendar"
                              class="h-4 w-4 text-orange"
                            />
                            <time datetime={post.data.date.toISOString()}>
                              {formattedDate}
                            </time>
                          </div>
                        </div>

                        <h2 class="mb-3 text-xl font-bold text-black transition-colors group-hover:text-orange dark:text-white lg:text-2xl">
                          {post.data.title}
                        </h2>

                        <p class="mb-4 text-gray-600 dark:text-gray-400">
                          {post.data.excerpt}
                        </p>

                        <div class="flex flex-wrap items-center justify-between gap-4">
                          {post.data.tags && post.data.tags.length > 0 && (
                            <div class="flex flex-wrap gap-2">
                              {post.data.tags.map((tag) => (
                                <span class="rounded-full border border-orange/30 bg-orange/10 px-2.5 py-0.5 text-xs font-medium text-orange">
                                  {tag}
                                </span>
                              ))}
                            </div>
                          )}

                          <span class="inline-flex items-center gap-1 text-sm font-medium text-orange">
                            Czytaj więcej
                            <Icon
                              name="mdi:arrow-right"
                              class="h-4 w-4 transition-transform group-hover:translate-x-1"
                            />
                          </span>
                        </div>
                      </div>
                    </div>
                  </a>
                </article>
              );
            })}
          </div>
        )
      }
    </div>
    <BackToTop />
  </main>
</Layout>
