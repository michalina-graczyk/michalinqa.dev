---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import { SEO } from "astro-seo";

export interface LayoutProps {
  title: string;
}

const {
  title = "Michalina Graczyk | Specjalistka ds. jakości i komunikacji w IT",
} = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="en" class="scroll-smooth" data-testid="html">
  <head>
    <SEO
      title="Michalina Graczyk - Specjalistka ds. jakości i komunikacji w IT"
      description="Liderka QA, Mentorka osób poszukujących swojej drogi w IT. #mentorka #qa #jakość #coaching."
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      href="https://assets.calendly.com/assets/external/widget.css"
      rel="stylesheet"
    />

    <title>{title}</title>
    <script src="/mixpanel.js" type="text/javascript"></script>
    <script
      src="https://assets.calendly.com/assets/external/widget.js"
      type="text/javascript"
      async></script>
  </head>
  <body
    class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
  >
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
