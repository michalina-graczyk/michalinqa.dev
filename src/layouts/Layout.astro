---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import ConsentBanner from "@components/ConsentBanner.astro";
import { SEO } from "astro-seo";

// Tailwind CSS v4 (CSS-first configuration)
import "../styles/global.css";

// Self-hosted fonts via @fontsource (GDPR-friendly, no external requests)
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/700.css";
import "@fontsource/inconsolata/400.css";
import "@fontsource/inconsolata/700.css";

export interface LayoutProps {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
  lang?: "pl" | "en";
}

const defaultTitle =
  "Michalina Graczyk | Engineering Manager";
const defaultDescription =
  "Michalina Graczyk - Engineering Manager w InPost | QA & Test Automation Strategy | AI-driven Testing | LLM Evaluation | Mobile QA";
const defaultImage = "/og-image.png";

const {
  title = defaultTitle,
  description = defaultDescription,
  image = defaultImage,
  type = "website",
  canonical,
  noindex = false,
  nofollow = false,
  lang = "pl",
} = Astro.props as LayoutProps;

const canonicalURL = canonical || Astro.url.href;
const imageURL = new URL(image, Astro.site).href;

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Michalina Graczyk",
  url: Astro.site,
};
---

<!doctype html>
<html lang={lang} class="scroll-smooth" data-testid="html">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      noindex={noindex}
      nofollow={nofollow}
      openGraph={{
        basic: {
          title: title,
          type: type,
          image: imageURL,
          url: canonicalURL,
        },
        optional: {
          description: description,
          locale: lang === "pl" ? "pl_PL" : "en_US",
          siteName: "Michalina Graczyk",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@MichalinQA",
        creator: "@MichalinQA",
        title: title,
        description: description,
        image: imageURL,
      }}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Michalina Graczyk - Blog"
      href="/rss.xml"
    />
    <link rel="preconnect" href="https://assets.calendly.com" />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <link
      href="https://assets.calendly.com/assets/external/widget.css"
      rel="stylesheet"
    />

    <script
      src="https://assets.calendly.com/assets/external/widget.js"
      type="text/javascript"
      async></script>
  </head>
  <body
    class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
  >
    <a href="#main-content" class="skip-link">Przejdź do głównej treści</a>
    <Navbar />
    <slot />
    <Footer />
    <ConsentBanner />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }

      /* Skip link for keyboard accessibility */
      .skip-link {
        position: absolute;
        left: -9999px;
        color: #000;
        text-decoration: underline;
      }
      .skip-link:focus {
        left: 0;
        top: 0;
        z-index: 9999;
        background: #fff;
        padding: 0.5rem 1rem;
      }
      .dark .skip-link:focus {
        background: #000;
        color: #fff;
      }

      /* Hide Calendly's parent-page spinner - iframe has its own loading state */
      .calendly-spinner {
        display: none !important;
      }
    </style>
  </body>
</html>
