---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import { SEO } from "astro-seo";

// Self-hosted fonts via @fontsource (GDPR-friendly, no external requests)
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/700.css";
import "@fontsource/inconsolata/400.css";
import "@fontsource/inconsolata/700.css";

export interface LayoutProps {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const defaultTitle =
  "Michalina Graczyk | Engineering Manager";
const defaultDescription =
  "Michalina Graczyk - Engineering Manager w InPost | QA & Test Automation Strategy | AI-driven Testing | LLM Evaluation";
const defaultImage = "/og-image.png";

const {
  title = defaultTitle,
  description = defaultDescription,
  image = defaultImage,
  type = "website",
} = Astro.props as LayoutProps;

const canonicalURL = Astro.url.href;
const imageURL = new URL(image, Astro.site).href;
---

<!doctype html>
<html lang="pl" class="scroll-smooth" data-testid="html">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          title: title,
          type: type,
          image: imageURL,
          url: canonicalURL,
        },
        optional: {
          description: description,
          locale: "pl_PL",
          siteName: "Michalina Graczyk",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@MichalinQA",
        creator: "@MichalinQA",
        title: title,
        description: description,
        image: imageURL,
      }}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      href="https://assets.calendly.com/assets/external/widget.css"
      rel="stylesheet"
    />

    <script src="/mixpanel.js" type="text/javascript"></script>
    <script
      src="https://assets.calendly.com/assets/external/widget.js"
      type="text/javascript"
      async></script>
  </head>
  <body
    class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
  >
    <a href="#main-content" class="skip-link">Przejdź do głównej treści</a>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }

      /* Skip link for keyboard accessibility */
      .skip-link {
        position: absolute;
        left: -9999px;
        color: #000;
        text-decoration: underline;
      }
      .skip-link:focus {
        left: 0;
        top: 0;
        z-index: 9999;
        background: #fff;
        padding: 0.5rem 1rem;
      }
      .dark .skip-link:focus {
        background: #000;
        color: #fff;
      }
    </style>
  </body>
</html>
